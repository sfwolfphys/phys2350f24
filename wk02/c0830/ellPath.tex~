\documentclass{standalone}

\usepackage{tikz}
\usetikzlibrary{calc}
\usepackage{xcolor}

\begin{document}
\pagecolor{white}

\begin{tikzpicture}[>=stealth]
  \coordinate (O) at (0,0);
  \coordinate (C) at (3.7,2);
  \draw (C) ellipse (4 and 1.5);
  \coordinate (A) at ($(C) + (65:4 and 1.5)$);
  \coordinate (B) at ($(C) + (0:4 and 1.5)$);

  \fill (O) circle (0.05) node [below=0.25cm]{O};
  \fill (A) circle (0.05) node [above=0.25cm]{A};
  \fill (B) circle (0.05) node [above right =0.25cm]{B};

  \draw[blue,->] (O) -- (A) node[midway, above left]{$\vec{r}_A$};
  \draw[red,->] (O) -- (B) node[midway, below right]{$\vec{r}_B$};
  \draw[green!60!black,->] (A) -- (B) node[midway, below left]{$\Delta\vec{r}_{AB}$};
\end{tikzpicture}
\end{document}